# ═══════════════════════════════════════════════════════════════════
# INFINITE SERVER26 - Environment Configuration
# ═══════════════════════════════════════════════════════════════════

# Docker Hub Credentials (for automated builds)
DOCKERHUB_USERNAME=nato1000
DOCKERHUB_TOKEN=your_dockerhub_token_here

# Rancher Configuration
RANCHER_PASSWORD=YourSecurePasswordHere

# NiA Vault Encryption
VAULT_MASTER_KEY=your_secure_vault_master_key_here
VAULT_ENCRYPTION_PASSWORD=your_encryption_password_here

# AI Systems Configuration
NAYDOE_MODE=autonomous
JESSICAI_MODE=huntress
JESSICAI_MERCY_MODE=disabled
QUANTUM_TWINBRAIN_ENABLED=true

# Security Configuration
SECURITY_LEVEL=maximum
AUTO_DEFENSE_ENABLED=true
THREAT_RESPONSE=immediate

# Mesh Shield Configuration
NAI_GAIL_ENABLED=true
SHIELD_RADIUS=100
MESH_NETWORK_SSID=NAi_gAil_Shield
MESH_NETWORK_PASSWORD=your_mesh_password_here

# Blockchain Configuration
NIA_VAULT_ACTIVE=true
BLOCKCHAIN_CHAINS=3
MINING_DIFFICULTY=4
SYNC_INTERVAL=300

# Network Configuration
FORTRESS_IP=0.0.0.0
FORTRESS_PORT=8000
RANCHER_PORT=8090

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# API Keys (if needed)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database (if using external)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fortress
# DB_USER=fortress_admin
# DB_PASSWORD=your_db_password_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_LOCATION=/var/backups/fortress
BACKUP_SCHEDULE="0 2 * * *"
